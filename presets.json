[
  {
    "name": "Convert to MP4",
    "command": "ffmpeg -i \"{input_path}/{filename}.{ext}\" -c:v copy -c:a copy \"{output_path}/{filename}.mp4\""
  },
  {
    "name": "Convert to MP4 (re-encode)",
    "command": "ffmpeg -i \"{input_path}/{filename}.{ext}\" -c:v libx264 -c:a aac -strict experimental \"{output_path}/{filename}.mp4\""
  },
  {
    "name": "Extract Audio to MP3",
    "command": "ffmpeg -i \"{input_path}/{filename}.{ext}\" -q:a 0 -map a \"{output_path}/{filename}.mp3\""
  },
  {
    "name": "Convert to MKV",
    "command": "ffmpeg -i \"{input_path}/{filename}.{ext}\" -c copy -c:s srt \"{output_path}/{filename}.mkv\""
  },
  {
    "name": "Extract img at hh:mm:ss",
    "command": "ffmpeg -ss 00:01:00 -i \"{input_path}/{filename}.{ext}\" -frames:v 1 \"{output_path}/{filename}.jpg\""
  },
  {
    "name": "Set thumbnail with img",
    "command": "ffmpeg -i \"{input_path}/{filename}.{ext}\" -i \"{output_path}/{filename}.jpg\" -map 0 -map 1 -c copy -disposition:v:1 attached_pic \"{output_path}/{filename}.{ext}\""
  },
  {
    "name": "Concatenate Videos (Demuxer)",
    "command": "ffmpeg -f concat -safe 0 -i {concat_list} -c copy \"{output}.mp4\""
  },
  {
    "name": "Concatenate Videos (Demuxer + Encode H264)",
    "command": "ffmpeg -f concat -safe 0 -i {concat_list} -c:v libx264 -preset medium -crf 23 -c:a aac -b:a 128k \"{output}.mp4\""
  }
]