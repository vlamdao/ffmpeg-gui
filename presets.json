[
  {
    "name": "Convert to MP4 (copy)",
    "command": "ffmpeg -i \"{infile_folder}/{infile_name}.{infile_ext}\" -c:v copy -c:a copy \"{output_folder}/{infile_name}.mp4\""
  },
  {
    "name": "Convert to MP4 (re-encode)",
    "command": "ffmpeg -i \"{infile_folder}/{infile_name}.{infile_ext}\" -c:v libx264 -c:a aac -strict experimental \"{output_folder}/{infile_name}.mp4\""
  },
  {
    "name": "Extract Audio to MP3",
    "command": "ffmpeg -i \"{infile_folder}/{infile_name}.{infile_ext}\" -q:a 0 -map a \"{output_folder}/{infile_name}.mp3\""
  },
  {
    "name": "Convert to MKV",
    "command": "ffmpeg -i \"{infile_folder}/{infile_name}.{infile_ext}\" -c copy -c:s srt \"{output_folder}/{infile_name}.mkv\""
  },
  {
    "name": "Extract image at hh:mm:ss",
    "command": "ffmpeg -ss 00:01:00 -i \"{infile_folder}/{infile_name}.{infile_ext}\" -frames:v 1 \"{output_folder}/{infile_name}.jpg\""
  },
  {
    "name": "Set thumbnail with image",
    "command": "ffmpeg -i \"{infile_folder}/{infile_name}.{infile_ext}\" -i \"{output_folder}/{infile_name}.jpg\" -map 0 -map 1 -c copy -disposition:v:1 attached_pic \"{output_folder}/{infile_name}.{infile_ext}\""
  },
  {
    "name": "Resize video to max 512px (width or height)",
    "command": "ffmpeg -i \"{infile_folder}/{infile_name}.{infile_ext}\" -vf \"scale='if(gt(iw,ih),512,-2)':'if(gt(ih,iw),512,-2)'\" \"{output_folder}/512px_{infile_name}.{infile_ext}\""
  }
]